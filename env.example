# ============================================
# БАЗА ДАННЫХ
# ============================================
DB_PORT=5432
DB_USER=dbuser
DB_PASSWORD=dbpassword
DB_NAME=jcourse

# ============================================
# BACKEND (Java Spring Boot)
# ============================================
BACKEND_PORT=8080

# JWT настройки
JWT_SECRET=YourVerySecretKeyThatShouldBeAtLeast256BitsLongForHS256Algorithm
JWT_EXPIRATION=86400000

# ML Service URL (внутри Docker сети)
ML_SERVICE_URL=http://ml-service:8000

# Email настройки (опционально)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
EMAIL_ENABLED=false

# Demo data (отключить для продакшена)
APP_DEMO_DATA_ENABLED=false

# SQL логирование (отключить для продакшена)
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_FORMAT_SQL=false

# ============================================
# ML SERVICE (Python FastAPI)
# ============================================
ML_SERVICE_PORT=8000
ML_DEBUG=false

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ СЕРВИСЫ
# ============================================
SWAGGER_PORT=8081
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
